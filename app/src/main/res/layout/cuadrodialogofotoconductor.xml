<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_cuadrocuenta"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/opcTomarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/btnTomarFotoConductor"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circlebackgroundred"
                android:padding="10dp"
                android:src="@drawable/ic_foto_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tomar Foto"
                android:textColor="#000"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/colorLightGrayLine" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/opcGaleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/btnTomardeGaleriaConductor"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circlebackgroundred"
                android:padding="10dp"
                android:src="@drawable/ic_galeria_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Galeria"
                android:textColor="#000"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/colorLightGrayLine" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/opcEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/btnEliminarFotoConductor"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circlebackgroundred"
                android:padding="10dp"
                android:src="@drawable/ic_eliminar_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Eliminar"
                android:textColor="#000"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/colorLightGrayLine" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
